{% extends 'baseadmin.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<h1>Product</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td>
						<img src="{{ vich_uploader_asset(product, 'imageFile')}}" width="100" height="80" alt="{{product.name}}" class="img-fluid">
					</td>
					<td>{{ product.price }}</td>
					<td>
						<a href="{{ path('app_product_show', {'id': product.id}) }}" class="glyphicon glyphicon-eye-open">show</a>
						<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="glyphicon glyphicon-pencil">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
